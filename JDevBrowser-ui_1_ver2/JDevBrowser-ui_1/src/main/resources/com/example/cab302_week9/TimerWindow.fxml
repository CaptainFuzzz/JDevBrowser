<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Pos?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cab302_week9.TimerController" alignment="CENTER" spacing="10">
    <TextField fx:id="timeInput" promptText="Enter time in minutes"/>
    <Button text="Set Time" onAction="#setTime"/>
    <Text fx:id="countdownText" text="00:00"/>
    <Button fx:id="startPauseButton" text="Start" onAction="#toggleTimer"/>
    <Button fx:id="settingsButton" text="..." onAction="#openSettings"/>
</VBox>
